Q1
#include <iostream>
using namespace std;
int main (){
	float peso,excesso,multa;
	
	const float limite=50;
	
	cout<<("Digite o peso em kg dos peixes pescados: ");
	cin>>peso;
	
	if (peso>limite){
		excesso= peso- limite;
		multa= excesso*4;
		
		cout<<"Peso em excedente: "<<excesso<<"kg"<<endl;
		cout<<"voce tera que pagar uma multa de : R$"<<multa<<endl;
		 
	}
	else{
		cout<<"peso dentro do limite permitido: "<<endl;
	}
	
	
	return 0;	
}
Q2
#include <iostream>
#include <cmath>
using namespace std;

int main() {
   float Tarquivo,Vdolink,Tarquivomegabits,TD;
   cout<<("Digite o tamanho do arquivo (em MB) : ");
   cin>>Tarquivo;
   
   cout<<("Digite a velocidade do arquivo(em Mbps) : ");
   cin>> Vdolink;
   
   Tarquivomegabits=Tarquivo*8;
   TD=Tarquivomegabits/Vdolink;
   
   cout<<("O tempo de download e igual a ")<<TD<<"s"<<endl;
   
   return 0;
   
   
	}
Q3
#include <iostream>

using namespace std;

double calcularMedia(double nota1, double nota2) {
    return (nota1 + nota2) / 2.0;
}

char atribuirConceito(double media) {
    if (media >= 9.0) {
        return 'A';
    } else if (media >= 7.5) {
        return 'B';
    } else if (media >= 6.0) {
        return 'C';
    } else if (media >= 4.0) {
        return 'D';
    } else {
        return 'E';
    }
}

int main() {
    double nota1, nota2;
    cout << "Digite a primeira nota: ";
    cin >> nota1;
    cout << "Digite a segunda nota: ";
    cin >> nota2;

    double media = calcularMedia(nota1, nota2);
    char conceito = atribuirConceito(media);

    cout << "Nota 1: " << nota1 << endl;
    cout << "Nota 2: " << nota2 << endl;
    cout << "MÃ©dia: " << media << endl;
    cout << "Conceito: " << conceito << endl;

    if (conceito == 'A' || conceito == 'B' || conceito == 'C') {
        cout << "APROVADO" << endl;
    } else {
        cout << "REPROVADO" << endl;
    }

    return 0;
}
Q4
#include <iostream>
using namespace std;
int main (){
	float lado1,lado2,lado3;
	cout<<("Digite o valor do lado1:");
	cin>>lado1;
	cout<<("Digite o valor do lado2:");
	cin>>lado2;
	cout<<("Digite o valor do lado3:");
	cin>>lado3;
	if(lado1==lado2 && lado2==lado3){
		cout<<"O triangulo e equilatero"<<endl;
	}
	else if ( lado1!=lado2 && lado1!=lado3 && lado3!=lado2){
		cout<<"O triangulo e isoceles"<<endl;
	}
	else 
	cout<<"O triangulo e escaleno"<<endl;

}
